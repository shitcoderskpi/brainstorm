<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BrainStorm</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #111827;
            position: relative;
            overflow-x: hidden;
        }

        .dot-pattern {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 95%;
            background-image:
                radial-gradient(circle, rgba(219, 39, 119, 0.07) 2.5px, transparent 1px),
                radial-gradient(circle, rgba(219, 39, 119, 0.04) 2.5px, transparent 1px);
            background-size: 50px 50px, 200px 200px;
            background-position: 0 0, 12px 12px;
            pointer-events: none;
            z-index: 0;
        }

        .center-glow {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 800px;
            height: 600px;
            background: radial-gradient(circle, rgba(192, 38, 211, 0.15) 0%, rgba(192, 38, 211, 0.05) 40%, transparent 70%);
            pointer-events: none;
            z-index: 1;
        }
        
        .smooth-hover {
            transition: all 0.2s ease;
            cursor: pointer;
        }
        
    </style>
</head>
<body>
<div class="dot-pattern"></div>

<div class="center-glow"></div>

<!-- Header -->
<header class="animate__animated animate__fadeIn animate__duration-500ms fixed top-0 z-50 w-full bg-gray-900/90 shadow-lg backdrop-blur-sm">
    <div class="container mx-auto flex items-center justify-between px-4 py-4">
        <div class="logo-container">
            <span class="logo-text bg-gradient-to-r from-pink-500 to-purple-600 bg-clip-text text-2xl font-bold text-transparent">BrainStorm</span>
        </div>
        <nav class="flex space-x-4">
            <a id="log_btn" href="/auth/login" class="animate__animated animate__fadeIn animate__duration-500ms px-4 py-2 font-medium text-pink-300 transition-colors hover:text-pink-200"> Sign In </a>
            <a id="reg_btn" href="/auth/register" class="animate-fast-pulse rounded-md bg-pink-600 px-5 py-2 font-medium text-white shadow-md transition-colors hover:bg-pink-700"> Get Started </a>
            <button id="account" class="underline hidden text-xl text-gray-300"></button>
        </nav>
    </div>
</header>

<!-- Main Content -->
<main class="relative z-10 container mx-auto px-4 pt-36 pb-20">
    <div class="mx-auto max-w-3xl text-center">
        <h1 class="animate-fast-fade-up mb-8 text-5xl leading-tight font-bold text-pink-300">Collaborative Whiteboard for Teams</h1>

        <p class="animate-fast-fade-up mb-12 text-xl leading-relaxed text-gray-300 delay-50">
            Simple tool for real-time brainstorming and idea sharing.<br />
            No installations, no complicated setups.
        </p>

        <div class="animate-fast-fade-up mb-28 flex justify-center space-x-5 delay-100">
            <button id="create-new" class="smooth-hover animate-fast-pulse rounded-lg bg-pink-600 px-8 py-4 font-bold text-white shadow-lg transition-colors hover:bg-pink-700">Start Drawing</button>
            <script src="~/js/session.js"></script>
            <button class="smooth-hover rounded-lg border-2 border-pink-500 px-8 py-4 font-bold text-pink-300 transition-colors hover:bg-pink-900/30">Join Session</button>
        </div>

        <!-- GitHub Contributors -->
        <div class="animate-fast-fade-up mb-28 delay-150">
            <h3 class="mb-6 text-lg font-medium text-pink-300">Built by</h3>
            <div class="flex justify-center space-x-4">
                <a href="https://github.com/dehobitto" target="_blank" class="github-avatar">
                    <img src="https://avatars.githubusercontent.com/u/110588734?v=4" class="h-14 w-14 rounded-full border-2 border-pink-500" alt="Contributor" />
                </a>
                <a href="https://github.com/LonerXW" target="_blank" class="github-avatar">
                    <img src="https://avatars.githubusercontent.com/u/181191750?v=4" class="h-14 w-14 rounded-full border-2 border-pink-500" alt="Contributor" />
                </a>
                <a href="https://github.com/inquaterni" target="_blank" class="github-avatar">
                    <img src="https://avatars.githubusercontent.com/u/181099740?v=4" class="h-14 w-14 rounded-full border-2 border-pink-500" alt="Contributor" />
                </a>
                <a href="https://github.com/ev3ny" target="_blank" class="github-avatar">
                    <img src="https://avatars.githubusercontent.com/u/180563034?v=4" class="h-14 w-14 rounded-full border-2 border-pink-500" alt="Contributor" />
                </a>
            </div>
        </div>

        <!-- Features -->
        <div class="grid gap-8 text-left md:grid-cols-3">
            <div class="smooth-hover transform rounded-xl border border-gray-700 bg-gray-800/70 p-8 shadow-lg backdrop-blur-sm">
                <h3 class="mb-4 text-lg font-semibold text-pink-400">ðŸš€ Instant Start</h3>
                <p class="text-base text-gray-300">Begin collaborating in seconds without registration</p>
            </div>
            <div class="smooth-hover transform rounded-xl border border-gray-700 bg-gray-800/70 p-8 shadow-lg backdrop-blur-sm">
                <h3 class="mb-4 text-lg font-semibold text-pink-400">ðŸŽ¯ Focused Tools</h3>
                <p class="text-base text-gray-300">Just what you need for productive sessions</p>
            </div>
            <div class="smooth-hover transform rounded-xl border border-gray-700 bg-gray-800/70 p-8 shadow-lg backdrop-blur-sm">
                <h3 class="mb-4 text-lg font-semibold text-pink-400">ðŸ’¸ Free Forever</h3>
                <p class="text-base text-gray-300">No hidden costs or premium plans</p>
            </div>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="mt-24 border-t border-gray-700">
    <div class="container mx-auto px-4 py-8 text-center text-sm text-gray-400">
        <p>Open source project Â· MIT License Â· Contribute on GitHub</p>
    </div>
</footer>

<script>
    document.body.classList.add('animate__animated', 'animate__fadeIn', 'animate__duration-800ms');
    const cards = document.querySelectorAll('.smooth-hover');
    cards.forEach((card, index) => {
        setTimeout(() => {
            card.style.opacity = "1";
            card.style.transform = "translateY(0)";
        }, 200 + (index * 100));
    });
    cards.forEach(card => {
        card.style.opacity = "0";
        card.style.transform = "translateY(20px)";
        card.style.transition = "all 0.3s ease";
    });
    
    function isLogged()
    {
        const token = localStorage.getItem("token");
        return token != null;
    }
    
    if (isLogged())
    {
        document.getElementById("reg_btn").style.display = "none";
        document.getElementById("log_btn").style.display = "none";
        const acc_btn = document.getElementById("account");
        acc_btn.innerHTML = localStorage.getItem("login");
        acc_btn.style.display = "flex";
    }
</script>
</body>
</html>