@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Страница Регистрации</title>
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            width: 300px;
            text-align: center;
        }
        h1, h2 {
            margin-bottom: 20px;
        }
        p {
            margin-bottom: 20px;
        }
        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 4px;
            background-color: #333;
            color: #fff;
        }
        button,
        input[type="submit"] {
            background-color: #6200ea;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover,
        input[type="submit"]:hover {
            background-color: #3700b3;
        }
        #resultMessage {
            margin-top: 20px;
            font-weight: bold;
        }
        .gif-container {
            margin-top: 20px;
        }
        .gif-container img {
            max-width: 100%;
            border-radius: 8px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core" style="color:#bb86fc;">building Web apps with ASP.NET Core</a>.</p>
    <hr />
    <h2>Реєстрація користувача</h2>
    <form id="registrationForm">
        <input type="text" id="login" name="login" placeholder="Логін" required />
        <input type="password" id="password" name="password" placeholder="Пароль" required />
        <button type="submit">Зареєструватися</button>
    </form>
    <div id="resultMessage"></div>
    <div class="gif-container">
        <img src="/images/My.gif" alt="My GIF" />
    </div>
</div>
<script>
    document.getElementById("registrationForm").addEventListener("submit", async function(e) {
        e.preventDefault();
        const login = document.getElementById("login").value;
        const password = document.getElementById("password").value;
        const formData = new URLSearchParams();
        formData.append("login", login);
        formData.append("password", password);
        try {
            const response = await fetch("/api/Users/register", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: formData.toString()
            });
            if (response.ok) {
                window.location.href = "/Auth/Login";
            } else {
                document.getElementById("resultMessage").innerText = await response.text();
            }
        } catch (error) {
            document.getElementById("resultMessage").innerText = "Сталася помилка: " + error;
        }
    });
</script>
</body>
</html>
